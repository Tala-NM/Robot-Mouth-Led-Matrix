#include <LedControl.h>

const int DIN_PIN = 11;
const int CS_PIN = 10;
const int CLK_PIN = 13;

LedControl lc = LedControl(DIN_PIN, CLK_PIN, CS_PIN, 4);  

void setup() {
  
  for (int i = 0; i < 4; i++) {
    lc.shutdown(i, false);        
    lc.setIntensity(i, 8);        
    lc.clearDisplay(i);           
  }
  
  
  drawSmileyMouth();
}

void loop() {
  
}

void drawSmileyMouth() {
  byte smileyMouth[8][4] = {
    {B00000000, B00000000, B00000000, B00000000},
    {B00000000, B00000000, B00000000, B00000000},
    {B01111111, B00000000, B00000000, B11111110},
    {B10000000, B11111111, B11111111, B00000001},
    {B01000000, B00000000, B00000000, B00000010},
    {B00100000, B00000000, B00000000, B0000100},
    {B00011111, B11111111, B11111111, B11111000},
    {B00000000, B00000000, B00000000, B00000000}
  };

  for (int row = 0; row < 8; row++) {
    for (int device = 0; device < 4; device++) {
      lc.setRow(device, row, smileyMouth[row][device]);
    }
  }
}
